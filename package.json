{
  "name": "hidoki",
  "version": "0.1.0",
  "description": "Hid≈çki: Async in Japanense. Functional helper library to work with promise. Inspired by/compatible with lodash/ramda.",
  "main": "build/src/index.js",
  "scripts": {
    "compile": "tsc",
    "bundle": "dts-bundle --name hidoki --main build/src/index.d.ts",
    "test": "NODE_ENV=test mocha --recursive --compilers ts:ts-node/register --bail",
    "cover": "NODE_ENV=test nyc npm test",
    "build": "npm run compile && npm run bundle",
    "clean": "rm -rf build",
    "prepublish": "npm run clean && npm run build"
  },
  "homepage": "https://github.com/vietthang/hidoki",
  "author": "Yoshi",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^3.4.34",
    "@types/lodash": "^4.14.52",
    "@types/mocha": "^2.2.32",
    "@types/node": "^7.0.5",
    "chai": "^3.5.0",
    "dts-bundle": "^0.6.1",
    "istanbul": "^0.4.5",
    "mocha": "^3.1.2",
    "nyc": "^10.1.2",
    "source-map-support": "^0.4.10",
    "ts-node": "^2.0.0",
    "tslint": "^3.15.1",
    "tslint-microsoft-contrib": "^2.0.13",
    "typescript": "^2.1.4"
  },
  "dependencies": {
    "lodash": "^4.17.4"
  },
  "typings": "build/src/hidoki.d.ts",
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html"
    ],
    "all": true
  }
}
